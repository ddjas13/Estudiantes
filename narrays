import java.util.Scanner;

public class Notas{

	//Definicion de variables a utilizar
	private String materia;
	private int carne;
	private int zona;
	private int examen;

	//Inicializacion de las variables
	public Notas(){
	
	materia = " ";
	carne = 0;
	zona = 0;
	examen = 0;
	}
	
	//Constructor para las variables definidas anteriormente
	public Notas(String m, int c, int z, int ex){
	materia = m;
	carne = c;
	zona = z;
	examen = ex;
	}

	//Metodos getter & Setters

	public void setMateria(String materia){
	this.materia = materia;
	}

	public String getMateria(){
	return materia;
	}

	public void setCarne(int carne){
	this.carne = carne;
	}

	public int getCarne(){
	return carne;
	}

	public void setZona(int zona){
	this.zona = zona;
	}

	public int getZona(){
	return zona;
	}

	public void setExamen(int examen){
	this.examen = examen;
	}

	public int examen(){
	return examen;
	}
    
    // Esto es del archivo TestNotas 
	public  void TNotas(){
	    materia = " ";
	    carne = 0;
	    zona = 0;
	    examen = 0;
	    int notafinal =0;
        boolean mayorzona;
        boolean mayorexamen;

	    Scanner nt = new Scanner(System.in);
	
	    System.out.println("Cuantos estudiantes quiere registrar");
	    int cantNotas = nt.nextInt();//Informacion para llenar la canti
	    nt.nextLine();
	
	    //Array 
	    Notas not[] =new Notas[cantNotas];
      	
        for (int i=0; i<not.length; i++){
            System.out.println("Ingresa el nombre de la Materia que vas a agregar notas");
            String nMateria = nt.nextLine();
            System.out.println("Ingresa el numero de carne del alumno");
            int carneEstudiante = nt.nextInt();

      	    mayorzona = true;

      	    while (mayorzona == true){
        	    System.out.println("ingresar la zona final del alumno");
        	    zona = nt.nextInt();
        	    if(zona > 60){
          	    System.out.println("El valor es invalido, la nota de la zona no puede ser mayor que 60 puntos");
            } else if (zona <= 60) {
            	mayorzona = false;
            }
      	    }

      	    mayorexamen = true;

      	    while (mayorexamen == true){
            	System.out.println("Ingresar la nota final de examen");
        	    examen = nt.nextInt();
        	    if(examen > 40){
          	    System.out.println("El valor es invalido, la nota del examen no puede ser mayor que 40 puntos");
            } else if (examen <= 40) {
            	mayorexamen = false;
            }
            nt.nextLine();
        }
            not[i] = new Notas(materia, carne, zona, examen);
        }
        
      //  for (int i=0; i<not.length; i++){
    //        System.out.println()
      //  }
     
    }

    public static void main(String[] args) {
     
      Notas notes = new Notas();
      notes.TNotas();

    }
  
}
