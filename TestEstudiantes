import java.util.Scanner;
public class TestEstudiantes{

  public static void main(String[] args) {

  /* Instanciamos 2 veces la libreria Scanner para pedir datos tipo String e Integer
  y que no haya ningun problema al momento de compilar el programa
  */
    Scanner est = new Scanner(System.in);
    Scanner estud = new Scanner(System.in);

    /*Pedimos los datos necesarios al usuario para poder registrar al nuevo alumno
    y utilizamos un ciclo do while por si el usuario desea ingresar mas 1 alumno nuevo
    */

    String  opcion;

    //while  (ciclo == "sidatos"){
      do {

      System.out.println("Ingrese los nombres del estudiante");
      String name = est.nextLine();
      System.out.println("Ingrese los apellidos del estudiante");
      String lastName = est.nextLine();
      System.out.println("Ingrese el sexo del estudiante");
      String gender = est.nextLine();
      System.out.println("Ingrese el id del estudiante");
      int idEst = estud.nextInt();
      System.out.println("Ingrese el id de la clase a asignarse");
      int idClass = estud.nextInt();
      System.out.println("Ingrese la edad del estudiante");
      int age = estud.nextInt();


      // Aqui instanciamos la clase Estudiantes para poder mostrar la informacion al usuario del sistema
      Estudiantes sc = new Estudiantes(name, lastName, gender, idEst, idClass, age);

      /*
      Mostramos la informacion ingresada y si todo esta bien procederemos a ingresar un
      nuevo usuario o regresar al menu principal terminando nuestra instruccion while
      */
      System.out.println("El nombre completo del alumno es "+sc.nombres+ " "+sc.apellidos);
      System.out.println("Es de genero: "+sc.genero+ " y tiene "+sc.edad+ " a√±os de edad");
      System.out.println("Su numero de carne es: "+sc.carne+ " Y esta en el curso # "+sc.idCurso);
      //estud.nextInt();
      System.out.println("Desea agregar mas datos mas estudiantes s/n");
      opcion = est.nextLine();
    } while(opcion.equalsIgnoreCase("s"));
  }
}

