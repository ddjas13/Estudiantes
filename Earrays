import java.util.Scanner;
import java.util.InputMismatchException;
public class Estudiantes{

	//Variables
	private String nombres;
	private String apellidos;
	private String genero;
	private int carne;
	private int idCurso;
	private int edad;

	//inicializacion de las variables
	public Estudiantes(){
	  nombres = " ";
		apellidos = " ";
		genero = " ";
		carne = 0;
		idCurso = 0;
		edad = 0;
	}

	// constructor
	public Estudiantes(String n, String a, String g, int c, int ic, int e){
		nombres = n;
		apellidos = a;
		genero = g;
		carne = c;
		idCurso = ic;
		edad = e;
	}

	//Metodos getter&setters
	public void setNombres(String nombres){
		this.nombres = nombres;
	}

	public String getNombres() {
		return nombres;
	}

	public void setApellidos(String apellidos){
		this.apellidos = apellidos;
	}

	public String getApellidos(){
		return apellidos;
	}

	public void setGenero(String genero){
		this.genero = genero;
	}

	public String getGenero() {
		return genero;
	}

	public void setCarne(int carne){
		this.carne = carne;
	}

	public int getCarne(){
		return carne;
	}

	public void setIdCurso(int idCurso){
		this.idCurso = idCurso;
	}

	public int getIdCurso(){
		return idCurso;
	}

	public void setEdad(int edad){
		this.edad = edad;
	}

	public int getEdad(){
		return edad;
	}
	public static void main(String[] args) {

		String nombres = " ";
		String apellidos = " ";
		String genero = " ";
		int carne = 0;
		int idCurso = 0;
		int edad = 0;

		Scanner est = new Scanner(System.in);
		
    System.out.println("Cuantos estudiantes quiere registrar");
    int cantEstudiantes = est.nextInt();
		est.nextLine();

    Estudiantes e[] = new Estudiantes[cantEstudiantes];

    for (int i = 0; i<e.length; i++){
        try{
    	System.out.println("Ingrese los nombres del estudiante");
      nombres = est.nextLine();
      System.out.println("Ingrese los apellidos del estudiante");
      apellidos = est.nextLine();
      System.out.println("Ingrese el sexo del estudiante");
      genero = est.nextLine();
      System.out.println("Ingrese el id del estudiante");
      carne = est.nextInt();
        } catch (InputMismatchException ex) {
            System.out.println("Exception occurred");
        }    
      System.out.println("Ingrese el id de la clase a asignarse");
      idCurso = est.nextInt();
      System.out.println("Ingrese la edad del estudiante");
      edad = est.nextInt();
      est.nextLine();
       // } catch (InputMismatchException ex) {
         //   System.out.println("Exception occurred");
        //}    
			e[i] = new Estudiantes(nombres, apellidos, genero, carne, idCurso, edad);
    }

		for (int i = 0; i<e.length; i++){
			System.out.println("El nombre completo es: "+e[i].getNombres()+" "+e[i].getApellidos()+ " de "+e[i].getEdad()+" annios de edad de genero: "+e[i].getGenero()+" numero de carne: "+e[i].getCarne()+" el curso asignado es: "+e[i].getIdCurso());
		}
  }
}
